<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.expand.widget.banner.BannerView
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="212dp"
        android:background="@mipmap/banner_default"
        app:animation_seconds="2"
        app:animation_interval_seconds="1"
        app:default_loading_image="@mipmap/banner_default"
        app:default_load_failed_image="@mipmap/banner_default"
        app:auto_play="true"
        app:indicator_drawable_selected="@drawable/circle_white"
        app:indicator_drawable_unselected="@drawable/shape_ring_white"
        app:indicator_height="7dp"
        app:indicator_margin="3dp"
        app:indicator_width="7dp"
        />
</RelativeLayout>
